generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id            String          @id
  description   String
  price         Float
  quantity      Int
  category      String          @default("")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  order_product order_product[]
  cart_product  cart_product[]
}

model customer {
  cpf       String   @id
  name      String
  email     String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  checkout_queue cart[]
  order          order[]
}

model cart {
  id            String    @id
  customerId    String?
  customer      customer? @relation(fields: [customerId], references: [cpf])
  total         Float
  status        String
  createdAt     DateTime  @default(now())

  cart_product cart_product[]
}

model cart_product {
  id            String    @id
  cartId        String
  cart          cart      @relation(fields: [cartId], references: [id])
  productId     String
  product       product   @relation(fields: [productId], references: [id])
  quantity      Int
}

model order {
  id            String    @id
  customerId    String?
  customer      customer? @relation(fields: [customerId], references: [cpf])
  paymentMethod String
  status        String
  total         Float
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  order_product order_product[]
}

model order_product {
  id        String  @id
  orderId   String
  order     order   @relation(fields: [orderId], references: [id])
  productId String
  product   product @relation(fields: [productId], references: [id])
  quantity  Int
}
