{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@entities/(.*)$": "<rootDir>/src/core/domain/entities/$1",
    "^@usecases/(.*)$": "<rootDir>/src/core/application/use_cases/$1",
    "^@repositories/(.*)$": "<rootDir>/src/adapters/driven/persistance/repositories/$1",
    "^@services/(.*)$": "<rootDir>/./src/core/domain/services/$1",
    "^@dto/(.*)$": "<rootDir>/./src/adapters/driver/dto/$1",
    "^@shared/(.*)$": "<rootDir>/./src/shared/$1"
  }
}
